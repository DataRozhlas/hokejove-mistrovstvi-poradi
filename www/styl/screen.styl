.ig
  @import basics
.ig
  .nation
    .rank
      position absolute
      .img
        width 30px
        height 30px
        border-radius 50%
        background-position 50%, 50%
        background-size cover
        background-repeat no-repeat
        &.slo, &.usa
          background-position 27%, 50%
        &.svk
          background-position 35%, 50%
        &.blr
          background-position 0%, 50%
        box-shadow 0px 0px 3px #c
