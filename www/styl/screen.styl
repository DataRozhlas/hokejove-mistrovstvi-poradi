@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .years
    position absolute
    left -9px
    top 3px
    span
      display block
      width 50px
      text-align center
      position absolute
      font-weight 700
      font-size 16px
      font-family Oswald, sans-serif
  .medal-bands
    width 100%
    margin-top -11px
    div
      height 53px
      width 100%
      &:first-child
        background lighten(gold, 70%)
      &:nth-child(2)
        background lighten(silver, 70%)
      &:nth-child(3)
        background lighten(#CD7F32, 70%)
  .flags
  .interaction-pane
  .medal-bands
  svg
    position absolute
    top 35px
    left 0px
  svg
    path
      fill none
      stroke-width 3
      stroke black
    g
      opacity 0.02
    &.active g
      opacity 0
    g.active
      opacity 0.3
  .flags
    .nation
      transition opacity 0.2s
      .rank
        position absolute
        .img
          width 30px
          height 30px
          border-radius 50%
          background-position 50%, 50%
          background-size cover
          background-repeat no-repeat
          &.slo, &.usa
            background-position 27%, 50%
          &.svk
            background-position 35%, 50%
          &.blr
            background-position 0%, 50%
          box-shadow 0px 0px 3px #c
    &.active .nation
      opacity 0.2
    .nation.active
      opacity 1
  .interaction-pane
    div
      position absolute
      width 54px
      height 54px
      margin-left -5px
      margin-top -5px
