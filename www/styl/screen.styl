@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .years
    position absolute
    left -9px
    top 3px
    span
      display block
      width 45px
      text-align center
      position absolute
      font-weight 700
      font-size 16px
      font-family Oswald, sans-serif
  .flags
  .interaction-pane
  .medal-bands
  svg
    position absolute
    top 35px
    left 0px

  .medal-bands
    position fixed
    width 100%
    margin-top -7px
    div
      height 40px
      width 100%
      &:first-child
        background lighten(gold, 70%)
      &:nth-child(2)
        background lighten(silver, 70%)
      &:nth-child(3)
        background lighten(#CD7F32, 70%)
  svg
    path
      fill none
      stroke-width 3
      stroke black
    g
      opacity 0.02
    &.active g
      opacity 0
    g.active
      opacity 0.3
  .flags
    z-index 2
    .nation
      transition opacity 0.2s
      .rank
        position absolute
        .img
          width 24px
          height 24px
          border-radius 50%
          background-position 50%, 50%
          background-size cover
          background-repeat no-repeat
          &.slo, &.usa
            background-position 27%, 50%
          &.svk
            background-position 35%, 50%
          &.blr
            background-position 0%, 50%
          box-shadow 0px 0px 3px #c
    &.active .nation
      opacity 0.2
    .nation.active
      opacity 1
  .interaction-pane
    z-index 3
    div
      position absolute
      width 46px
      height 42px
      margin-left -5px
      margin-top -5px
  .navbutton
    top 647px
    z-index 1
    position fixed
    font-family Oswald, sans-serif
    font-size 16px
    color darken(ColorRed, 50%)
    text-transform uppercase
    font-weight 700
    opacity 1
    transition opacity 0.8s
    &.disabled
      opacity 0
      pointer-events none
      cursor default
    &:before
      content " "
      position absolute
      top -5px
      opacity 1
      transition opacity 0.8s
    &:hover
      text-decoration none
    &:hover:before
      opacity 0.6
  .backbutton
    left 30px
    padding-left 35px
    &:before
      left 0px
      triangle(15px, 27px, 'left', ColorRed)
  .nextbutton
    right 30px
    padding-right 35px
    &:before
      right 0px
      triangle(15px, 27px, 'right', ColorRed)
