@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .flags
  .interaction-pane
  svg
    position absolute
    top 0px
    left 0px
  svg
    path
      fill none
      stroke-width 3
      stroke black
    g
      opacity 0.02
    &.active g
      opacity 0
    g.active
      opacity 0.5
  .flags
    .nation
      .rank
        position absolute
        .img
          width 30px
          height 30px
          border-radius 50%
          background-position 50%, 50%
          background-size cover
          background-repeat no-repeat
          &.slo, &.usa
            background-position 27%, 50%
          &.svk
            background-position 35%, 50%
          &.blr
            background-position 0%, 50%
          box-shadow 0px 0px 3px #c
    &.active .nation
      opacity 0.2
    .nation.active
      opacity 1
  .interaction-pane
    div
      position absolute
      width 50px
      height 50px
      margin-left -5px
      margin-top -5px
