@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .flags
  .interaction-pane
  svg
    position absolute
    top 0px
    left 0px
  svg
    path
      fill none
      stroke-width 3
      stroke #fa
  .nation
    .rank
      position absolute
      .img
        // opacity 0.2
        width 30px
        height 30px
        border-radius 50%
        background-position 50%, 50%
        background-size cover
        background-repeat no-repeat
        &.slo, &.usa
          background-position 27%, 50%
        &.svk
          background-position 35%, 50%
        &.blr
          background-position 0%, 50%
        box-shadow 0px 0px 3px #c
  .interaction-pane
    div
      width 50px
      height 50px
      background yellow
      border 1px solid red
      opacity 0.5
